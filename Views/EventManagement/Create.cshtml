@model StarTickets.Models.ViewModels.CreateEventViewModel
@{
    ViewData["Title"] = "Create New Event";
    ViewBag.PageDescription = "Create a new event with details and ticket categories";
    Layout = "~/Views/Shared/CustomLayouts/_EventManagement.cshtml";
}

<div class="create-event-container">
    <div class="form-header">
        <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Back to Events
        </a>
    </div>

    <form asp-action="Create" method="post" class="event-form" id="createEventForm">
        @Html.AntiForgeryToken()

        <div class="row">
            <!-- Main Event Details -->
            <div class="col-lg-8">
                <div class="form-card">
                    <div class="card-header">
                        <h5><i class="fas fa-info-circle"></i> Event Information</h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-12">
                                <label asp-for="EventName" class="form-label required">Event Name</label>
                                <input asp-for="EventName" class="form-control" placeholder="Enter event name" />
                                <span asp-validation-for="EventName" class="text-danger"></span>
                            </div>

                            <div class="col-12">
                                <label asp-for="Description" class="form-label">Description</label>
                                <textarea asp-for="Description" class="form-control" rows="4"
                                          placeholder="Describe your event..."></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="EventDate" class="form-label required">Event Date & Time</label>
                                <input asp-for="EventDate" type="datetime-local" class="form-control" />
                                <span asp-validation-for="EventDate" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="EndDate" class="form-label">End Date & Time</label>
                                <input asp-for="EndDate" type="datetime-local" class="form-control" />
                                <span asp-validation-for="EndDate" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="BandName" class="form-label">Band/Artist Name</label>
                                <input asp-for="BandName" class="form-control" placeholder="Band or artist name" />
                                <span asp-validation-for="BandName" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Performer" class="form-label">Performer</label>
                                <input asp-for="Performer" class="form-control" placeholder="Main performer" />
                                <span asp-validation-for="Performer" class="text-danger"></span>
                            </div>

                            <div class="col-12">
                                <label asp-for="ImageUrl" class="form-label">Event Image URL</label>
                                <input asp-for="ImageUrl" type="url" class="form-control"
                                       placeholder="https://example.com/image.jpg" />
                                <span asp-validation-for="ImageUrl" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Ticket Categories -->
                <div class="form-card">
                    <div class="card-header">
                        <h5><i class="fas fa-ticket-alt"></i> Ticket Categories</h5>
                        <button type="button" class="btn btn-sm btn-success" id="addTicketCategory">
                            <i class="fas fa-plus"></i> Add Category
                        </button>
                    </div>
                    <div class="card-body">
                        <div id="ticketCategoriesContainer">
                            <!-- Ticket categories will be added here dynamically -->
                        </div>
                        <div class="mt-3">
                            <small class="text-muted">
                                <i class="fas fa-info-circle"></i>
                                Add different ticket types with pricing (e.g., VIP, Regular, Student)
                            </small>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Event Settings -->
            <div class="col-lg-4">
                <div class="form-card">
                    <div class="card-header">
                        <h5><i class="fas fa-cog"></i> Event Settings</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label asp-for="CategoryId" class="form-label required">Event Category</label>
                            <select asp-for="CategoryId" class="form-select">
                                <option value="">Select Category</option>
                                @foreach (var category in Model.Categories)
                                {
                                    <option value="@category.CategoryId">@category.CategoryName</option>
                                }
                            </select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="VenueId" class="form-label required">Venue</label>
                            <select asp-for="VenueId" class="form-select">
                                <option value="">Select Venue</option>
                                @foreach (var venue in Model.Venues)
                                {
                                    <option value="@venue.VenueId">
                                        @venue.VenueName - @venue.City
                                    </option>
                                }
                            </select>
                            <span asp-validation-for="VenueId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="OrganizerId" class="form-label required">Event Organizer</label>
                            <select asp-for="OrganizerId" class="form-select">
                                <option value="">Select Organizer</option>
                                @foreach (var organizer in Model.Organizers)
                                {
                                    <option value="@organizer.UserId">
                                        @organizer.FirstName @organizer.LastName
                                    </option>
                                }
                            </select>
                            <span asp-validation-for="OrganizerId" class="text-danger"></span>
                        </div>

                        <div class="form-check">
                            <input asp-for="IsActive" type="checkbox" class="form-check-input" />
                            <label asp-for="IsActive" class="form-check-label">
                                Event is Active
                            </label>
                        </div>
                    </div>
                </div>

                <!-- Form Actions -->
                <div class="form-actions">
                    <button type="submit" class="btn btn-primary btn-lg w-100">
                        <i class="fas fa-save"></i> Create Event
                    </button>
                    <a href="@Url.Action("Index")" class="btn btn-outline-secondary w-100 mt-2">
                        Cancel
                    </a>
                </div>
            </div>
        </div>
    </form>
</div>

<!-- Ticket Category Template -->
<div id="ticketCategoryTemplate" style="display: none;">
    <div class="ticket-category-item" data-index="0">
        <div class="category-header">
            <h6>Ticket Category</h6>
            <button type="button" class="btn btn-sm btn-outline-danger remove-category">
                <i class="fas fa-trash"></i>
            </button>
        </div>
        <div class="row g-2">
            <div class="col-md-6">
                <label class="form-label required">Category Name</label>
                <input type="text" name="TicketCategories[0].CategoryName" class="form-control"
                       placeholder="e.g., VIP, Regular" />
            </div>
            <div class="col-md-6">
                <label class="form-label required">Price</label>
                <div class="input-group">
                    <span class="input-group-text">$</span>
                    <input type="number" name="TicketCategories[0].Price" step="0.01" min="0"
                           class="form-control" placeholder="0.00" />
                </div>
            </div>
            <div class="col-md-6">
                <label class="form-label required">Total Quantity</label>
                <input type="number" name="TicketCategories[0].TotalQuantity" min="1"
                       class="form-control" placeholder="100" />
            </div>
            <div class="col-md-6">
                <label class="form-label">Available Quantity</label>
                <input type="number" name="TicketCategories[0].AvailableQuantity" min="0"
                       class="form-control" placeholder="Will match total" readonly />
            </div>
            <div class="col-12">
                <label class="form-label">Description</label>
                <textarea name="TicketCategories[0].Description" class="form-control" rows="2"
                          placeholder="Brief description of this ticket category..."></textarea>
            </div>
            <div class="col-12">
                <div class="form-check">
                    <input type="checkbox" name="TicketCategories[0].IsActive" value="true"
                           class="form-check-input" checked />
                    <input type="hidden" name="TicketCategories[0].IsActive" value="false" />
                    <label class="form-check-label">Category is Active</label>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}