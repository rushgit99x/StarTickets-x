@model StarTickets.Models.ViewModels.EditEventViewModel
@{
    ViewData["Title"] = "Edit Event";
    ViewBag.PageDescription = "Edit event details";
    Layout = "~/Views/Shared/CustomLayouts/_EventManagement.cshtml";
}

<div class="event-management-container">
    <!-- Header -->
    <div class="page-header">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h2>Edit Event</h2>
                <p class="text-muted">Update event information and settings</p>
            </div>
            <div>
                <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left"></i> Back to Events
                </a>
            </div>
        </div>
    </div>

    <!-- Edit Form Card -->
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">
                <i class="fas fa-edit"></i> Event Details
            </h5>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post" class="needs-validation" novalidate>
                <input type="hidden" asp-for="EventId" />

                <div class="row">
                    <!-- Basic Information -->
                    <div class="col-md-8">
                        <h6 class="section-title">Basic Information</h6>

                        <div class="row g-3">
                            <div class="col-md-12">
                                <label asp-for="EventName" class="form-label"></label>
                                <input asp-for="EventName" class="form-control" required />
                                <span asp-validation-for="EventName" class="text-danger"></span>
                            </div>

                            <div class="col-md-12">
                                <label asp-for="Description" class="form-label"></label>
                                <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="BandName" class="form-label"></label>
                                <input asp-for="BandName" class="form-control" />
                                <span asp-validation-for="BandName" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Performer" class="form-label"></label>
                                <input asp-for="Performer" class="form-control" />
                                <span asp-validation-for="Performer" class="text-danger"></span>
                            </div>

                            <div class="col-md-12">
                                <label asp-for="ImageUrl" class="form-label"></label>
                                <input asp-for="ImageUrl" class="form-control" type="url" />
                                <span asp-validation-for="ImageUrl" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <!-- Event Settings -->
                    <div class="col-md-4">
                        <h6 class="section-title">Event Settings</h6>

                        <div class="mb-3">
                            <label asp-for="CategoryId" class="form-label"></label>
                            <select asp-for="CategoryId" class="form-select" required>
                                <option value="">Select Category</option>
                                @foreach (var category in Model.Categories)
                                {
                                    <option value="@category.CategoryId">@category.CategoryName</option>
                                }
                            </select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="VenueId" class="form-label"></label>
                            <select asp-for="VenueId" class="form-select" required>
                                <option value="">Select Venue</option>
                                @foreach (var venue in Model.Venues)
                                {
                                    <option value="@venue.VenueId">@venue.VenueName - @venue.City</option>
                                }
                            </select>
                            <span asp-validation-for="VenueId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="OrganizerId" class="form-label"></label>
                            <select asp-for="OrganizerId" class="form-select" required>
                                <option value="">Select Organizer</option>
                                @foreach (var organizer in Model.Organizers)
                                {
                                    <option value="@organizer.UserId">@organizer.FirstName @organizer.LastName</option>
                                }
                            </select>
                            <span asp-validation-for="OrganizerId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Status" class="form-label"></label>
                            <select asp-for="Status" class="form-select" required>
                                <option value="0">Draft</option>
                                <option value="1">Published</option>
                                <option value="2">Cancelled</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <div class="form-check">
                                <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                                <label asp-for="IsActive" class="form-check-label"></label>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Date and Time -->
                <div class="row mt-4">
                    <div class="col-md-12">
                        <h6 class="section-title">Date & Time</h6>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="EventDate" class="form-label"></label>
                        <input asp-for="EventDate" class="form-control" type="datetime-local" required />
                        <span asp-validation-for="EventDate" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="EndDate" class="form-label"></label>
                        <input asp-for="EndDate" class="form-control" type="datetime-local" />
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>
                </div>

                <!-- Ticket Categories -->
                <div class="row mt-4">
                    <div class="col-md-12">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h6 class="section-title mb-0">Ticket Categories</h6>
                            <button type="button" class="btn btn-sm btn-outline-primary" id="addTicketCategory">
                                <i class="fas fa-plus"></i> Add Category
                            </button>
                        </div>

                        <div id="ticketCategoriesContainer">
                            @if (Model.TicketCategories != null && Model.TicketCategories.Any())
                            {
                                @for (int i = 0; i < Model.TicketCategories.Count; i++)
                                {
                                    <div class="ticket-category-row card mb-3">
                                        <div class="card-body">
                                            <div class="row g-3">
                                                <input type="hidden" asp-for="TicketCategories[i].TicketCategoryId" />

                                                <div class="col-md-3">
                                                    <label asp-for="TicketCategories[i].CategoryName" class="form-label"></label>
                                                    <input asp-for="TicketCategories[i].CategoryName" class="form-control" required />
                                                    <span asp-validation-for="TicketCategories[i].CategoryName" class="text-danger"></span>
                                                </div>

                                                <div class="col-md-2">
                                                    <label asp-for="TicketCategories[i].Price" class="form-label"></label>
                                                    <input asp-for="TicketCategories[i].Price" class="form-control" type="number" step="0.01" required />
                                                    <span asp-validation-for="TicketCategories[i].Price" class="text-danger"></span>
                                                </div>

                                                <div class="col-md-2">
                                                    <label asp-for="TicketCategories[i].TotalQuantity" class="form-label"></label>
                                                    <input asp-for="TicketCategories[i].TotalQuantity" class="form-control" type="number" required />
                                                    <span asp-validation-for="TicketCategories[i].TotalQuantity" class="text-danger"></span>
                                                </div>

                                                <div class="col-md-2">
                                                    <label asp-for="TicketCategories[i].AvailableQuantity" class="form-label"></label>
                                                    <input asp-for="TicketCategories[i].AvailableQuantity" class="form-control" type="number" required />
                                                    <span asp-validation-for="TicketCategories[i].AvailableQuantity" class="text-danger"></span>
                                                </div>

                                                <div class="col-md-2">
                                                    <label class="form-label">&nbsp;</label>
                                                    <div class="d-flex gap-2">
                                                        <div class="form-check">
                                                            <input asp-for="TicketCategories[i].IsActive" class="form-check-input" type="checkbox" />
                                                            <label asp-for="TicketCategories[i].IsActive" class="form-check-label">Active</label>
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="col-md-1 d-flex align-items-end">
                                                    <button type="button" class="btn btn-sm btn-outline-danger remove-ticket-category">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </div>

                                                <div class="col-md-12">
                                                    <label asp-for="TicketCategories[i].Description" class="form-label"></label>
                                                    <textarea asp-for="TicketCategories[i].Description" class="form-control" rows="2"></textarea>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="alert alert-info">
                                    <i class="fas fa-info-circle"></i> No ticket categories defined. Click "Add Category" to add ticket types.
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <!-- Form Actions -->
                <div class="row mt-4">
                    <div class="col-md-12">
                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                            <div>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save"></i> Update Event
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- JavaScript for dynamic ticket categories -->
<script>
    document.addEventListener('DOMContentLoaded', function() {
        let ticketCategoryIndex = @(Model.TicketCategories?.Count ?? 0);

        // Add new ticket category
        document.getElementById('addTicketCategory').addEventListener('click', function() {
            const container = document.getElementById('ticketCategoriesContainer');
            const newRow = createTicketCategoryRow(ticketCategoryIndex);

            // Remove the info alert if it exists
            const infoAlert = container.querySelector('.alert-info');
            if (infoAlert) {
                infoAlert.remove();
            }

            container.insertAdjacentHTML('beforeend', newRow);
            ticketCategoryIndex++;
        });

        // Remove ticket category
        document.addEventListener('click', function(e) {
            if (e.target.closest('.remove-ticket-category')) {
                e.target.closest('.ticket-category-row').remove();

                // Show info alert if no categories left
                const container = document.getElementById('ticketCategoriesContainer');
                if (container.children.length === 0) {
                    container.innerHTML = `
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i> No ticket categories defined. Click "Add Category" to add ticket types.
                        </div>
                    `;
                }
            }
        });

        function createTicketCategoryRow(index) {
        return `
            <div class="ticket-category-row card mb-3">
                <div class="card-body">
                    <div class="row g-3">
                        <input type="hidden" name="TicketCategories[${index}].TicketCategoryId" value="0" />

                        <div class="col-md-3">
                            <label class="form-label">Category Name</label>
                            <input name="TicketCategories[${index}].CategoryName" class="form-control" required />
                        </div>

                        <div class="col-md-2">
                            <label class="form-label">Price</label>
                            <input name="TicketCategories[${index}].Price" class="form-control" type="number" step="0.01" required />
                        </div>

                        <div class="col-md-2">
                            <label class="form-label">Total Quantity</label>
                            <input name="TicketCategories[${index}].TotalQuantity" class="form-control" type="number" required />
                        </div>

                        <div class="col-md-2">
                            <label class="form-label">Available Quantity</label>
                            <input name="TicketCategories[${index}].AvailableQuantity" class="form-control" type="number" required />
                        </div>

                        <div class="col-md-2">
                            <label class="form-label">&nbsp;</label>
                            <div class="d-flex gap-2">
                                <div class="form-check">
                                    <input type="hidden" name="TicketCategories[${index}].IsActive" value="false" />
                                    <input name="TicketCategories[${index}].IsActive" class="form-check-input" type="checkbox" value="true" checked />
                                    <label class="form-check-label">Active</label>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-1 d-flex align-items-end">
                            <button type="button" class="btn btn-sm btn-outline-danger remove-ticket-category">
                                <i class="fas fa-trash"></i>
                            </button>
                        </div>

                        <div class="col-md-12">
                            <label class="form-label">Description</label>
                            <textarea name="TicketCategories[${index}].Description" class="form-control" rows="2"></textarea>
                        </div>
                    </div>
                </div>
            </div>
        `;
    }
    });
</script>

<style>
    .section-title {
        color: #495057;
        font-weight: 600;
        margin-bottom: 15px;
        padding-bottom: 8px;
        border-bottom: 2px solid #e9ecef;
    }

    .page-header {
        margin-bottom: 2rem;
    }

    .ticket-category-row {
        border: 1px solid #dee2e6;
    }

    .card-header {
        background-color: #f8f9fa;
        border-bottom: 1px solid #dee2e6;
    }
</style>