<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StarTickets Admin</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/CategoryManagement.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
</head>
<body>
    <div class="admin-container">
        <!-- Sidebar Navigation -->
        <nav class="admin-sidebar">
            <div class="sidebar-header">
                <h4><i class="fas fa-ticket-alt"></i> Dashboard</h4>
            </div>
            <ul class="sidebar-menu">
                <li class="menu-item">
                    <a href="@Url.Action("Index", "EventManagement")" class="menu-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "EventManagement" ? "active" : "")">
                        <i class="fas fa-calendar-alt"></i>
                        <span>Events</span>
                    </a>
                </li>
                <li class="menu-item">
                    <a href="@Url.Action("Index", "EventApproval")" class="menu-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "EventApproval" ? "active" : "")">
                        <i class="fas fa-check-circle"></i>
                        <span>Approvals</span>
                        @{
                            var pendingCount = ViewBag.PendingApprovalCount ?? 0;
                        }
                        @if (pendingCount > 0)
                        {
                            <span class="badge badge-danger">@pendingCount</span>
                        }
                    </a>
                </li>
                <li class="menu-item">
                    <a href="@Url.Action("Index", "VenueManagement")" class="menu-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "VenueManagement" ? "active" : "")">
                        <i class="fas fa-map-marker-alt"></i>
                        <span>Venues</span>
                    </a>
                </li>
                <li class="menu-item">
                    <a href="@Url.Action("Index", "CategoryManagement")" class="menu-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "CategoryManagement" ? "active" : "")">
                        <i class="fas fa-tags"></i>
                        <span>Categories</span>
                    </a>
                </li>
                <li class="menu-item">
                    <a href="@Url.Action("Index", "Admin")" class="menu-link">
                        <i class="fas fa-arrow-left"></i>
                        <span>Back to Dashboard</span>
                    </a>
                </li>
            </ul>
        </nav>

        <!-- Main Content -->
        <main class="admin-content">
            <!-- Top Header -->
            <header class="content-header">
                <div class="header-left">
                    <h1 class="page-title">@ViewData["Title"]</h1>
                    @if (ViewBag.PageDescription != null)
                    {
                        <p class="page-description">@ViewBag.PageDescription</p>
                    }
                </div>
                <div class="header-right">
                    <span class="user-info">
                        @* Welcome, Admin *@
                    </span>
                </div>
            </header>

            <!-- Content Area -->
            <div class="content-body">
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="fas fa-check-circle me-2"></i>
                        @TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="fas fa-exclamation-circle me-2"></i>
                        @TempData["ErrorMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                @RenderBody()
            </div>
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/CategoryManagement.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>