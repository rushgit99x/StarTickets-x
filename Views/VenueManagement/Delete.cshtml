@model StarTickets.Models.Venue

@{
    ViewData["Title"] = "Delete Venue";
    Layout = "~/Views/Shared/CustomLayouts/_EventManagement.cshtml";
}

<div class="delete-venue-container">
    <h2 class="text-danger">
        <i class="fas fa-map-marker-alt"></i> Delete Venue
    </h2>

    <div class="alert alert-warning">
        Are you sure you want to delete the venue <strong>@Model.VenueName</strong>?
    </div>

    <dl class="row">
        <dt class="col-sm-2">City</dt>
        <dd class="col-sm-10">@Model.City</dd>

        <dt class="col-sm-2">Capacity</dt>
        <dd class="col-sm-10">@Model.Capacity</dd>

        <dt class="col-sm-2">Active</dt>
        <dd class="col-sm-10">@Model.IsActive</dd>
    </dl>

    <form asp-action="Delete" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="VenueId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
