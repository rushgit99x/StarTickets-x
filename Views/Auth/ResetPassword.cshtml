@model StarTickets.Models.ViewModels.ResetPasswordViewModel
@{
    ViewData["Title"] = "Reset Password";
    Layout = "~/Views/Shared/CustomLayouts/_ResetPassword.cshtml";
}

<!-- Include Font Awesome for icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<!-- Include the custom CSS -->
<link rel="stylesheet" href="~/css/ResetPassword.css">

<div class="reset-password-container">
    <div class="reset-password-card">
        <div class="reset-password-header">
            <h1 class="reset-password-title">
                <i class="fas fa-key"></i>
                Reset Password
            </h1>
            <p class="reset-password-subtitle">
                Create a new secure password for your account.
            </p>
        </div>

        <div class="reset-password-body">
            <!-- Display success message if exists -->
            @if (ViewBag.SuccessMessage != null)
            {
                <div class="alert alert-success alert-modern" role="alert">
                    <i class="fas fa-check-circle"></i>
                    <div>
                        <strong>Password reset successfully!</strong><br>
                        @ViewBag.SuccessMessage
                    </div>
                </div>
            }

            <!-- Display error message if exists -->
            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger alert-modern" role="alert">
                    <i class="fas fa-exclamation-circle"></i>
                    <div>@ViewBag.ErrorMessage</div>
                </div>
            }

            <!-- Display validation summary -->
            <div asp-validation-summary="ModelOnly" class="alert alert-danger alert-modern" role="alert" style="display: none;">
                <i class="fas fa-exclamation-triangle"></i>
                <div></div>
            </div>

            <form asp-action="ResetPassword" method="post" novalidate>
                <!-- Hidden fields for token and email -->
                <input asp-for="Token" type="hidden" />
                <input asp-for="Email" type="hidden" />

                <!-- Email display field (readonly) -->
                <div class="modern-input-group">
                    <label class="modern-label">Email Address</label>
                    <div class="position-relative">
                        @* <i class="fas fa-envelope input-icon"></i> *@
                        <input value="@Model.Email"
                               class="modern-input"
                               type="email"
                               readonly
                               aria-label="Email address (read-only)" />
                    </div>
                </div>

                <!-- New Password field -->
                <div class="modern-input-group">
                    <label asp-for="Password" class="modern-label">New Password</label>
                    <div class="position-relative">
                        @* <i class="fas fa-lock input-icon"></i> *@
                        <input asp-for="Password"
                               class="modern-input"
                               type="password"
                               placeholder="Enter your new password"
                               autocomplete="new-password"
                               required />
                    </div>
                    <span asp-validation-for="Password" class="validation-message"></span>
                </div>

                <!-- Confirm Password field -->
                <div class="modern-input-group">
                    <label asp-for="ConfirmPassword" class="modern-label">Confirm New Password</label>
                    <div class="position-relative">
                        @* <i class="fas fa-lock input-icon"></i> *@
                        <input asp-for="ConfirmPassword"
                               class="modern-input"
                               type="password"
                               placeholder="Confirm your new password"
                               autocomplete="new-password"
                               required />
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="validation-message"></span>
                </div>

                <button type="submit" class="reset-password-btn">
                    <i class="fas fa-key me-2"></i>
                    Reset Password
                </button>
            </form>

            <div class="back-to-login">
                <a asp-action="Login" class="back-to-login-link">
                    <i class="fas fa-arrow-left"></i>
                    Back to Login
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/ResetPassword.js"></script>

    <script>
        // Handle validation summary display
        document.addEventListener('DOMContentLoaded', function() {
            const validationSummary = document.querySelector('[asp-validation-summary="ModelOnly"]');
            if (validationSummary && validationSummary.textContent.trim()) {
                validationSummary.style.display = 'flex';
            }

            // Check if there are any server-side validation errors and show them
            const serverErrors = document.querySelectorAll('.field-validation-error');
            if (serverErrors.length > 0) {
                // Focus on the first field with an error
                const firstErrorField = document.querySelector('.input-validation-error, .is-invalid');
                if (firstErrorField) {
                    setTimeout(() => {
                        firstErrorField.scrollIntoView({ behavior: 'smooth', block: 'center' });
                        firstErrorField.focus();
                    }, 100);
                }
            }
        });
    </script>
}