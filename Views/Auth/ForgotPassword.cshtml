@model StarTickets.Models.ViewModels.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot Password";
    Layout = "~/Views/Shared/CustomLayouts/_ForgotPassword.cshtml";
}

<!-- Include Font Awesome for icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<!-- Include the custom CSS -->
<link rel="stylesheet" href="~/css/ForgotPassword.css">

<div class="forgot-password-container">
    <div class="forgot-password-card">
        <div class="forgot-password-header">
            <h1 class="forgot-password-title">
                <i class="fas fa-key"></i>
                Forgot Password
            </h1>
            <p class="forgot-password-subtitle">
                Enter your email address and we'll send you a link to reset your password.
            </p>
        </div>

        <div class="forgot-password-body">
            <!-- Display success message if exists -->
            @if (ViewBag.SuccessMessage != null)
            {
                <div class="alert alert-success alert-modern" role="alert">
                    <i class="fas fa-check-circle"></i>
                    <div>
                        <strong>Reset link sent!</strong><br>
                        @ViewBag.SuccessMessage
                    </div>
                </div>
            }

            <!-- Display error message if exists -->
            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger alert-modern" role="alert">
                    <i class="fas fa-exclamation-circle"></i>
                    <div>@ViewBag.ErrorMessage</div>
                </div>
            }

            <!-- Display validation summary -->
            <div asp-validation-summary="ModelOnly" class="alert alert-danger alert-modern" role="alert" style="display: none;">
                <i class="fas fa-exclamation-triangle"></i>
                <div></div>
            </div>

            <form asp-action="ForgotPassword" method="post" novalidate>
                <div class="modern-input-group">
                    <label asp-for="Email" class="modern-label">Email Address</label>
                    <div class="position-relative"><br />
                        <i class="fas fa-envelope input-icon"></i>
                        <input asp-for="Email"
                               class="modern-input"
                               type="email"
                               placeholder="Enter your email address"
                               autocomplete="email"
                               required />
                    </div>
                    <span asp-validation-for="Email" class="validation-message"></span>
                </div>

                <button type="submit" class="forgot-password-btn">
                    <i class="fas fa-paper-plane me-2"></i>
                    Send Reset Link
                </button>
            </form>

            <div class="back-to-login">
                <a asp-action="Login" class="back-to-login-link">
                    <i class="fas fa-arrow-left"></i>
                    Back to Login
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/ForgotPassword.js"></script>

    <script>
        // Handle validation summary display
        document.addEventListener('DOMContentLoaded', function() {
            const validationSummary = document.querySelector('[asp-validation-summary="ModelOnly"]');
            if (validationSummary && validationSummary.textContent.trim()) {
                validationSummary.style.display = 'flex';
            }
        });
    </script>
}